xrandr --output DP3 --off --output DP2 --off --output DP1 --off --output HDMI3 --off --output HDMI2 --off --output HDMI1 --mode 1440x900 --pos 0x0 --rotate normal --output LVDS1 --mode 1366x768 --pos 1440x132 --rotate normal --output VGA1 --off
